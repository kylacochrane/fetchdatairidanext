iridanext {
    enabled = true
    output {
        path = "${params.outdir}/iridanext.output.json.gz"
        overwrite = true
        validate = true
        schema = "${projectDir}/assets/iridanext_output_schema.json"
        files {
            idkey = "id"
            samples = ["**/sratools/reads/*.fastq.gz"]
        }
        metadata {
            flatten = true
            samples {
                json {
                    path = "**/ffq/*.json"
                }
            }
        }
    }
}
