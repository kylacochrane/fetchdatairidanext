{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "schema:output_schema.json",
  "title": "Default IRIDA Next JSON output schema",
  "description": "Default schema used for validating IRIDA Next JSON output data",
  "type": "object",
  "properties": {
    "files": {
      "type": "object",
      "properties": {
        "global": {
          "type": "array"
        },
        "samples": {
          "type": "object"
        },
        "invalid": {
          "type": "object"
        }
      },
      "required": ["global", "samples"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "samples": {
          "type": "object"
        }
      }
    }
  }
}
